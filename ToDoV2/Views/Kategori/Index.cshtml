@model IEnumerable<ToDoV2.Models.kategorimodel>

@{
    ViewBag.Title = "Index";
}

<h2>Kategoriler</h2>
<hr />

<p>
    @Html.ActionLink("Kategori Ekle", "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />
@if (TempData["Kategori"] != null)
{
    var kategori = (ToDoV2.Models.Kategori)TempData["Kategori"];

    <div class="alert alert-success">
        <span class="glyphicon glyphicon-ok"></span>
        <b>
            @kategori.KategoriAdi
        </b>
        Güncellendi.
    </div>

}


<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsSayisi)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSayisi)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xsn" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xsn" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xsn" })
            </td>
        </tr>
    }

</table>
