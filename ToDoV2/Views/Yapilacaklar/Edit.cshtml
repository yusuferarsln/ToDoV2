            @Html.TextAreaFor(model => model.IsDetayi, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IsDetayi, "", new { @class = "text-danger" })
        </div>
    </div>

    @using (Html.BeginForm("ResimEkle", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
