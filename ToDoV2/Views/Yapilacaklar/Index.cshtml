@model IEnumerable<ToDoV2.Models.Yapilacaklar>

@{
    ViewBag.Title = "Index";
}

<h2>Yapılacaklar Listesi</h2>
<hr />

<p>
    @Html.ActionLink("Yeni iş ekle", "Create", null, new { @class = "btn btn-primary" })
</p>
<hr />
@if (TempData["yapilacaklar"] != null)
{
    var yapilacaklar = (ToDoV2.Models.Yapilacaklar)TempData["yapilacaklar"];
    <div class="alert-success" role="alert">

        <span class="glyphicon glyphicon-ok">
        </span>
        <b>@yapilacaklar.Yapilacak</b>Başlıklı iş güncellendi.
    </div>

}
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Yapilacak)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDetayi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ekrangoruntusu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EklenmeTarihi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Yapilacak)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDetayi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ekrangoruntusu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EklenmeTarihi)
            </td>
            <td>
                @if (item.IsDone)
                {
                    <label class="label label-success">Yapıldı</label>
                }
                else
                {
                    <label class="label label-danger">Yapılmadı</label>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xsn" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xsn" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xsn" })
            </td>
        </tr>
    }

</table>
